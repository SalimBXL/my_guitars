<p style="color: green"><%= notice %></p>

<h1>Brands</h1>

<div class="w3-right"><%= link_to "New brand", new_brand_path %></div>

<table id="brands" class="w3-table-all w3-hoverable">
  <thead class="w3-hide-small">
    <tr>
      <th>Brand Name</th>
      <th class="w3-hide-small">Website</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td class="w3-hide-small"><%= brand.website %></td>
        <td class="w3-right">
          <%= link_to "<i class='material-symbols-rounded'>visibility</i>".html_safe, brand, title: "View models" %>
          <%= link_to "<i class='material-symbols-rounded'>edit</i>".html_safe, "#", title: "Edit" %>
          <%= link_to "<i class='material-symbols-rounded'>delete</i>".html_safe, "#", title: "Delete" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New brand", new_brand_path %>
